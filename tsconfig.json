{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "paths": {
      "@Utils": [
        "src/Utils/"
      ],
      "@Modules": [
        "src/Modules/"
      ],
      "@Components": [
        "src/Components/"
      ]
    }
  },
  "include": [
    "./src",
    "./webpack.config.ts"
  ]
}